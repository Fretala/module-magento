<config>
    <modules>
        <Uecommerce_Fretala>
            <version>1.0.0</version>
        </Uecommerce_Fretala>
    </modules>
    <global>
        <helpers>
            <fretala>
                <class>Uecommerce_Fretala_Helper</class>
            </fretala>
        </helpers>
        <models>
            <fretala>
                <class>Uecommerce_Fretala_Model</class>
            </fretala>
        </models>
        <resources>
            <fretala_setup>
                <setup>
                    <module>Uecommerce_Fretala</module>
                    <class>Uecommerce_Fretala_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fretala_setup>
            <fretala_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fretala_write>
            <fretala_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fretala_read>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <fretala>
                    <files>
                        <default>Fretala.csv</default>
                    </files>
                </fretala>
            </modules>
        </translate>
    </adminhtml>
</config>