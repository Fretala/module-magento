<config>
    <modules>
        <Uecommerce_Fretala>
            <version>1.0.1</version>
        </Uecommerce_Fretala>
    </modules>
    <global>
        <helpers>
            <fretala>
                <class>Uecommerce_Fretala_Helper</class>
            </fretala>
        </helpers>
        <blocks>
            <fretala>
                <class>Uecommerce_Fretala_Block</class>
            </fretala>
        </blocks>
        <models>
            <fretala>
                <class>Uecommerce_Fretala_Model</class>
            </fretala>
        </models>
        <resources>
            <fretala_setup>
                <setup>
                    <module>Uecommerce_Fretala</module>
                    <class>Uecommerce_Fretala_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fretala_setup>
            <fretala_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fretala_write>
            <fretala_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fretala_read>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <fretala_vip_delivery />
                    </product_attributes>
                </item>
            </quote>
            <shipping>
                <carriers>
                    <fretala>
                        <class>Uecommerce_Fretala_Model_Carrier_Fretala</class>
                    </fretala>
                </carriers>
            </shipping>
        </sales>
        <events>
            <sales_order_place_after>
                <observers>
                    <fretala>
                        <class>fretala/observer</class>
                        <method>createShipping</method>
                    </fretala>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <admin>
        <routers>
            <fretala>
                <use>admin</use>
                <args>
                    <module>Uecommerce_Fretala</module>
                    <frontName>fretala</frontName>
                </args>
            </fretala>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <fretala>
                        <type>singleton</type>
                        <class>fretala/observer</class>
                        <method>checkSettings</method>
                    </fretala>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <fretala>
                    <files>
                        <default>Fretala.csv</default>
                    </files>
                </fretala>
            </modules>
        </translate>
        <layout>
            <updates>
                <fretala>
                    <file>fretala.xml</file>
                </fretala>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <carriers>
            <fretala>
                <active>1</active>
                <model>fretala/carrier_fretala</model>
                <title><![CDATA[Freta.lÃ¡]]></title>
                <name>Entrega Vip</name>
                <report_error>1</report_error>
                <client_id>ecommerce</client_id>
                <client_secret>Q6eH4nxD</client_secret>
            </fretala>
        </carriers>
    </default>
</config>